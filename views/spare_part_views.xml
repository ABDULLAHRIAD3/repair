<odoo>
    <record id="spare_part_view_tree" model="ir.ui.view">
        <field name ="name">Spare tree</field>
        <field name = "model">spare.part</field>
        <field name= "arch" type="xml">
            <list multi_edit="1">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="spare_part_view_form" model="ir.ui.view">
        <field name ="name">Spare form</field>
        <field name = "model">spare.part</field>
        <field name= "arch" type="xml">
            <form multi_edit="1">
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
            </sheet>
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="spare_part_action" model="ir.actions.act_window">
        <field name="name">Spare Part</field>
        <field name="res_model">spare.part</field>
    </record>

    <menuitem 
        id="spare_part_item"
        name="Spare Part"
        parent="repair_menu_config"
        action="spare_part_action"
    />

</odoo>